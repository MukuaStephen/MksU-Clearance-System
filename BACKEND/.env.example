# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*.mksu.ac.ke

# Database Configuration (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=mksu_clearance
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_HOST=127.0.0.1
DB_PORT=3306

# Frontend URL
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PROD=https://clearance.mksu.ac.ke

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=604800

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
EMAIL_USE_TLS=True

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# M-PESA Configuration (for production)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/finance/mpesa_callback/

# SSO Configuration (University Integration)
SSO_ENABLED=False
SSO_PROVIDER_URL=https://sso.mksu.ac.ke
SSO_CLIENT_ID=your_client_id
SSO_CLIENT_SECRET=your_client_secret

# File Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
